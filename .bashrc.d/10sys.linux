### .bashr.linux : included file for Linux Systems
if  n=$(uname -s); test ${n::5} = 'Linux'; then echo -n " linux:"

	## Aliases
	alias ls='ls --color=auto'

	## Java
	test -d /etc/alternatives/jre && export JAVA_HOME='/etc/alternatives/jre'

	### Colorization
	LS_COLORS='di=1;;40:ln=35;40:so=32;40:pi=33;40:ex=31;40:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=0;42:ow=0;43:'

	echo -n \;
fi